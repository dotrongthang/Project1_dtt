<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <TextView
        android:textColor="@color/primary"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="ĐĂNG NHẬP HỆ THỐNG"
        android:textSize="28sp" />

    <RelativeLayout
        android:id="@+id/lnChoose"
        android:layout_marginTop="40dp"
        android:onClick="onClickChoose"
        android:background="@drawable/botron_khung"
        android:padding="8dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMainChonDT"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textColor="@color/textColorBold"
            android:layout_height="wrap_content"
            android:text="Vui lòng chọn đối tượng sử dụng"
            android:textSize="16sp"/>

        <ImageView
            android:layout_marginLeft="8dp"
            android:src="@drawable/select_obj"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/edtMainUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:hint="Nhập số điện thoại"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edtMainPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnMainDangNhap"
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:onClick="onClickLogin"
            android:background="@drawable/change_color_btn"
            android:text="Đăng nhập"/>

        <Button
            android:id="@+id/btnMainThoat"
            android:layout_marginLeft="40dp"
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:onClick="onClickExit"
            android:background="@drawable/change_color_btn"
            android:text="Thoát"/>
    </LinearLayout>

</LinearLayout>